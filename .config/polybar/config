[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/desktop]
monitor = ${env:MONITOR:DP-2}
width = 100%
height = 1.5%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
border-size = 0
padding = 1
module-margin = 1

font-0 = "Noto Sans Mono:size=15;1"
font-1 = "Noto Sans Mono:size=15;1"
font-2 = "Noto Sans Symbols:size=10;1"
font-3 = "Noto Sans Symbols2:size=15;1"

modules-left = date bspwm xwindow 
modules-center = mpd
modules-right = memory cpu wlan eth battery xkeyboard

tray-position = right
tray-padding = 2
tray-maxsize = 15

wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "î‰¯ "
format-prefix-foreground = ${colors.foreground-alt}
